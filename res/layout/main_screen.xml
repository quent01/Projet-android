<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_body_color"
    android:orientation="vertical"
    tools:context=".MainActivity" >
    
    <!-- header -->
   	<include layout="@layout/activity_main"/>
   	
   	<!-- post header -->
   	<include layout="@layout/post_header"/>

   	<!-- Separation line -->
    <View 
        android:layout_marginTop="2dip"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/separation_line_color"
    />

   	<!-- list of datas : type, value, state -->
   	<ListView
   	    android:id="@+id/data_display_list"
   	    android:layout_width="match_parent"
   	    android:layout_height="match_parent"
   	    android:paddingTop="2dip"
   	    android:paddingBottom="2dip"
   	    android:clipToPadding="false"
   	    android:divider="@color/separation_line_color"
   	    android:dividerHeight="2dp" >

   	</ListView>      	    

   	<!-- <com.google.android.maps.MapView    
   	    android:layout_weight="1"
        android:id="@+id/MapView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:apiKey="@string/mapKey"
        android:clickable="true"
    /> -->
</LinearLayout>