<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/post_header_height"
    android:orientation="vertical"
    tools:context=".MainActivity" 
    >
    
    <TextView 
    	android:id="@+id/data_text"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:textColor="@color/postheader_textColor"
    	android:gravity="center_horizontal"
    	android:layout_marginTop="7dip"
    	android:textSize="25sp"
    	android:text="DATAS"    
    />
    <TableRow 
        android:id="@+id/data_description"
        android:layout_below="@+id/data_text"
        android:layout_marginTop="10dip"
        android:layout_width="match_parent"
	  	android:layout_height="wrap_content"
	  	android:paddingBottom="2dip"
	  	android:clipToPadding="false" 
        >
        <TextView
  	        android:id="@+id/text_type"
  	        android:textColor="@color/postheader_textColor"
  	        android:layout_width="wrap_content"
  	        android:layout_height="wrap_content"
  	        android:layout_weight="1"
  	        android:gravity="center"
  	        android:textSize="@dimen/data_description_textsize"
  	        android:text="TYPE" />
        <TextView
  	        android:id="@+id/text_value"
  	        android:textColor="@color/postheader_textColor"
  	        android:layout_width="wrap_content"
  	        android:layout_height="wrap_content"
  	        android:layout_weight="1"
  	        android:gravity="center"
  	        android:textSize="@dimen/data_description_textsize"
  	        android:text="VALUE" />
        <TextView
  	        android:id="@+id/text_state"
  	        android:textColor="@color/postheader_textColor"
  	        android:layout_width="wrap_content"
  	        android:layout_height="wrap_content"
  	        android:layout_weight="1"
  	        android:gravity="center"
  	        android:textSize="@dimen/data_description_textsize"
  	        android:text="STATE" />
    </TableRow>
    

</RelativeLayout>    