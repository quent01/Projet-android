<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/post_header_height"
    android:orientation="vertical"
    tools:context=".MainActivity" 
    >
    
    <TextView 
    	android:id="@+id/data_text"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textColor="@color/postheader_textColor"
    	android:layout_marginLeft="70dip"
    	android:layout_marginTop="7dip"
    	android:textSize="17sp"
    	android:text="DATAS"    
    />
    <TableRow 
        android:id="@+id/data_description"
        android:layout_below="@+id/data_text"
        android:layout_marginTop="15dip"
        android:layout_width="match_parent"
	  	android:layout_height="wrap_content"
	  	 
        >
        <TextView
  	        android:id="@+id/text_type"
  	        android:textColor="@color/postheader_textColor"
  	        android:layout_width="wrap_content"
  	        android:layout_height="wrap_content"
  	        android:layout_weight="1"
  	        android:gravity="center"
  	        android:textSize="@dimen/data_description_textsize"
  	        android:text="TYPE" />
        <TextView
  	        android:id="@+id/text_value"
  	        android:textColor="@color/postheader_textColor"
  	        android:layout_width="wrap_content"
  	        android:layout_height="wrap_content"
  	        android:layout_weight="1"
  	        android:gravity="center"
  	        android:textSize="@dimen/data_description_textsize"
  	        android:text="VALUE" />
        <TextView
  	        android:id="@+id/text_state"
  	        android:textColor="@color/postheader_textColor"
  	        android:layout_width="wrap_content"
  	        android:layout_height="wrap_content"
  	        android:layout_weight="1"
  	        android:gravity="center"
  	        android:textSize="@dimen/data_description_textsize"
  	        android:text="STATE" />
    </TableRow>
    
    <!-- Separation line -->
    <View 
        android:layout_below="@+id/data_description"
        android:layout_marginTop="2dip"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/separation_line_color"
    />
</RelativeLayout>    